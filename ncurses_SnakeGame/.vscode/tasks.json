{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ сборка активного файла",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${fileDirname}/main.cpp",
        "-o",
        "${fileDirname}/main",
        "GameWindow.cpp",
        "GameBar.cpp",
        "Snake.cpp",
        "Vector2.cpp",
        "Core.cpp",
        "-lncurses"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
  "version": "2.0.0"
}
