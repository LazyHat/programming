{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ сборка активного файла",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "main.cpp",
        "string.cpp",
        "dint.cpp",
        "window.cpp",
        "-lncurses",
        "-o",
        "main"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
  "version": "2.0.0"
}
