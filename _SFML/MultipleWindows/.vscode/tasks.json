{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ сборка активного файла",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${fileDirname}/source.cpp",
        "-o",
        "${fileDirname}/source",
        "-ISFML-2.5.1/include",
        "-LSFML-2.5.1/lib",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system",
        "-lX11",
        "Button.cpp"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
  "version": "2.0.0"
}
