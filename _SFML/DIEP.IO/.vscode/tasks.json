{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ сборка активного файла",
      "command": "/usr/bin/g++-13",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++20",
        "-g",
        "main.cpp",
        "AssetManager.cpp",
        "-o",
        "${fileDirname}/Diep_io",
        "-lsfml-graphics",
        "-lsfml-window",
        "-lsfml-system"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Задача создана отладчиком."
    }
  ],
  "version": "2.0.0"
}
